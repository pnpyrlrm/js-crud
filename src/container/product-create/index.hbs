<main>
  <section>
    <div class="form">
      <h1 class="form__title">Створення товару</h1>
      <form method="POST" action="/product-create">
        <div class="card">
          <h2 class="card__title">Інформація про товар</h2>
          <div class="in_row">
            <div class="card__field">
              <label for="name" class="card__label">Назва товару</label>
              <input type="name" name="name" class="card__input">
            </div>
            <div class="card__field">
              <label for="price" class="card__label">Ціна</label>
              <input type="price" name="price" class="card__input">
            </div>
          </div>
          <div class="in_row">
            <div class="card__field">
              <label for="description" class="card__label">Короткий опис товару</label>
              <input type="description" name="description" class="card__input">
              <span class="card__info">Відображується у картці товару</span>
            </div>
          </div>
          <button class="card__button">
            <div class="button__text">Створити товар</div>
          </button>
        </div>
      </form>
    </div>
  </section>
</main>